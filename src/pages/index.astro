---
// Component Imports
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.tsx';
import Footer from '../components/Footer.tsx';
import Hero from '../components/Hero.tsx'; // Import the new Hero component
import ServicesOverview from '../components/ServicesOverview.tsx'; // Import the new ServicesOverview component
import PageTransition from '../components/PageTransition.tsx';
import ScrollAnimationWrapper from '../components/ScrollAnimationWrapper.tsx';
// import { Button } from "../components/ui/button"; // No longer needed directly on this page for now

const someProps = {
	count: 0,
};

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<Layout title="Rodriguez Lawn Service - Expert Lawn Care & Tree Services">
	<Navbar client:load slot="navbar" />

	<PageTransition client:load>
		<Hero client:load />
		<ServicesOverview client:load />

		<section class="container mx-auto py-12 px-4 text-center bg-gray-50">
			<ScrollAnimationWrapper client:load>
				<h2 class="text-3xl font-bold mb-4">Why Choose Us?</h2>
				<p>More details coming soon!</p>
			</ScrollAnimationWrapper>
		</section>
	</PageTransition>

	<Footer client:load slot="footer" />
</Layout>
