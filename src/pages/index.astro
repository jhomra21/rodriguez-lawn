---
// Component Imports
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.tsx';
import Footer from '../components/Footer.tsx';
import Hero from '../components/Hero.tsx';
import ServicesOverview from '../components/ServicesOverview.tsx';
import BeforeAndAfter from '../components/BeforeAndAfter.tsx';
import ContactSection from '../components/ContactSection.tsx';
import PageTransition from '../components/PageTransition.tsx';
import ScrollAnimationWrapper from '../components/ScrollAnimationWrapper.tsx';
import BusinessCard from '../components/BusinessCard.tsx';

const someProps = {
	count: 0,
};

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<Layout title="Rodriguez Lawn Service - Expert Lawn Care & Tree Services">
	<Navbar client:load slot="navbar" />

	<PageTransition client:load>
		<!-- Hero Section -->
		<section id="top">
			<Hero client:load />
		</section>

		<!-- Services Section -->
		<section id="services" class="py-12 md:py-20 bg-green-50">
			<div class="container mx-auto px-4">
				<ScrollAnimationWrapper client:load>
					<h1 class="text-4xl font-bold text-green-800 text-center mb-12">Our Services</h1>
				</ScrollAnimationWrapper>
				
				<ServicesOverview client:load />
			</div>
		</section>

		<!-- Before and After Section -->
		<section class=" bg-white">
			<BeforeAndAfter
				client:load
				beforeImage="https://picsum.photos/seed/before/800/450"
				afterImage="https://picsum.photos/seed/after/800/450"
				beforeLabel="Before Our Service"
				afterLabel="After Our Magic"
				title="Transform Your Property"
				description="See the remarkable difference our professional lawn care makes. Our expert team can revitalize your outdoor space with our comprehensive services."
			/>
		</section>

		<!-- Contact Section -->
		<ContactSection client:load />

		<!-- Business Card Section -->
		<section class="py-12 md:py-16 bg-gray-50">
			<div class="container mx-auto px-4">
				<ScrollAnimationWrapper client:load>
					<h2 class="text-3xl font-bold text-green-800 text-center mb-8">Our Business Card</h2>
					<p class="text-center text-gray-600 mb-10 max-w-2xl mx-auto">Save our contact information for when you need professional lawn care and tree services.</p>
				</ScrollAnimationWrapper>
				<BusinessCard client:load />
			</div>
		</section>
	</PageTransition>

	<Footer client:load slot="footer" />
</Layout>
